<!DOCTYPE html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheet/loader/loader.css" type="text/css">
    <link rel="stylesheet" href="stylesheet/menu/menu.css" type="text/css">
    <link rel="stylesheet" href="stylesheet/event/eventmenu.css" type="text/css">
    <link rel="stylesheet" href="stylesheet/register/register.css" type="text/css">

    <title style="font-family:'Courier New', Courier, monospace">Incandescence</title>
    <link rel="shortcut icon" href="fonts/i.png">
    </link>
</head>

<body>
    <!-- loader -->
    <div id='loader'>
        <div id='mascot-baton'>
            <div id='flame' class="fire_place">
                <div class="blur_fire">
                    <div class="big_flame"></div>
                </div>
                <div class="spark spark1">I</div>
                <div class="spark spark2">n</div>
                <div class="spark spark3">c</div>
                <div class="spark spark4">a</div>
                <div class="spark spark5">n</div>
                <div class="spark spark6">d</div>
                <div class="spark spark7">e</div>
                <div class="spark spark8">s</div>
                <div class="spark spark9">c</div>
                <div class="spark spark10">e</div>
                <div class="spark spark11">n</div>
                <div class="spark spark12">c</div>
                <div class="spark spark13">e</div>
            </div>
            <img src="image/loader/airawat-holding-torch.png" id="baton">
        </div>
    </div>

    <!-- menu -->
    <div id="menu">

        <a href='/'>
            <div id='logo'>
            </div>
        </a>

        <div id="cld1c">
            <div id="cld1">
                <a href="/event" id="link1">Events</a>
            </div>
        </div>

        <div id="cld2c">
            <div id="cld2">
                <a href="/gallery" id="link2">Gallery</a>
            </div>
        </div>

        <div id="cld3c">
            <div id="cld3">
                <a href="/history" id="link3">History</a>
            </div>
        </div>

        <div id="cld4c">
            <div id="cld4">
                <a href="/campus" id="link4">CA</a>
            </div>
        </div>

        <div id="cld5c">
            <div id="cld5">
                <a href="/faq" id="link5">F.A.Q</a>
            </div>
        </div>

        <div id="cld6c">
            <div id="cld6">
                <a href="/register" id="link6">Register</a>
            </div>
        </div>

        <div id="cld7c">
            <div id="cld7">
                <p>Menu</p>
            </div>
        </div>

        <div id="cld8c">
            <div id="cld8">
            </div>
        </div>

        <div id="cld9c">
            <div id="cld9">
            </div>
        </div>

    </div>
    <% if(validate==0){ %>
        <script type="text/javascript">
            alert("Email ID not valid")
        </script>
        <% } %>
            <br>
            <br>
            <br>
            <div class='form-container'>
                <div class="container">
                    <div class="row">

                        <div class="col-lg-10 col-xl-9 mx-auto">
                            <div class="card card-signin flex-row my-5">
                                <div class="card-img-left d-none d-md-flex">
                                    <!-- Background image for card set in CSS! -->
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-center">
                                        <span>I</span>
                                        <span>N</span>
                                        <span>C</span>
                                        <span>A</span>
                                        <span>N</span>
                                        <span>D</span>
                                        <span>E</span>
                                        <span>S</span>
                                        <span>C</span>
                                        <span>E</span>
                                        <span>N</span>
                                        <span>C</span>
                                        <span>E</span>
                                    </h5>

                                    <form class="form-signin" method="POST" action="/register">

                                        <div class="form-label-group">
                                            <input id="1" type="text" name="name" class="form-control" placeholder="Name" required autofocus>
                                            <label for="1">Name</label>
                                        </div>

                                        <div class="form-label-group">
                                            <input id="2" type="email" name="email" class="form-control" placeholder="Email address" required>
                                            <label for="2">Email address </label>
                                        </div>

                                        <div class="form-label-group">
                                            <input id="3" type="text" name="number" class="form-control" placeholder="Phone Number" required>
                                            <label for="3">Phone Number(without +91/0)</label>
                                        </div>

                                        <select class="custom-select" name="college">
                                <option selected>College...</option>
                                <option value="1">NIT Silchar</option>
                                <option value="2">Other</option>
                            </select>

                                        <hr>

                                        <button class="btn btn-lg btn-grad btn-block text-uppercase" type="submit">Register</button>
                                        <a class="d-block text-center mt-2 small" href="/adminlogin">ADMIN access</a>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script src="js/menu/menu.js"></script>
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script type="text/javascript">
                window.addEventListener('load', function() {
                    $(window).resize(function(e) {
                        adaptMenu();
                    });
                    document.getElementById('loader').remove();
                });
                adaptMenu();
            </script>

</body>

</html>